#!/bin/zsh

removePath=$(fd --no-ignore --hidden --follow --exclude .git | fzf -m --height 100% --preview 'FDcheck(){
    if [[ -f $1 ]]; then
        bat --color=always --style=changes,numbers $1
    else
        fd . $1 --color=always
    fi
}; FDcheck {}' --preview-window down:60%)

if [ -n "$removePath" ]
then
    removePath=$(tr '\n' ' ' <<< "$removePath")
    echo "remove $removePath"
    rm -rf $(echo "$removePath")
fi
